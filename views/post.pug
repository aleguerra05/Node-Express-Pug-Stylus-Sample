extends layout

block content
  p
    a(href='./') Lista de Artículos
  p
    a(href='/posts/' + (post.id + 1)) Siguiente Artículo

  form(action="/posts/edit/"+post.id method="POST")
    input(type="hidden" name="id" placeholder="" value=post.id)
    p Codigo:
      input(type="text" name="code" placeholder="" value=post.code)
    p Título:
      textarea(name="title" placeholder="" rows="1" cols="60" value=post.title) #{post.title}
    p Título Inglés:
      textarea(name="title_en" placeholder="" rows="1" cols="60" value=post.title_en) #{post.title_en}
    p Descripción:
      textarea(name="description" placeholder="" value=post.description rows="6" cols="60") #{post.description}
    p Descripción Inglés:
      textarea(name="description_en" placeholder="" value=post.description_en rows="6" cols="60") #{post.description_en}
    p Máscara de Fecha:
      input(type="text" name="dateMask" placeholder="" value=post.dateMask)
    p Fecha Inicio:
      input(type="text" name="startDate" placeholder="" value=post.startDate)
    p Fecha Fin:
      input(type="text" name="endDate" placeholder="" value=post.endDate)
    input(type="submit" value="Actualizar")

  if images.length >0
    p Imágenes
    each ima in images
        .img
            img(src='../'+ima.path)
        form(action="/images/del/"+ima.id method="POST")
          input(type="submit" value="Delete Image")
  else
    p No posee Imágenes
  form(action="/images" method="POST" encType="multipart/form-data")
    //p PostId:
    input(type="hidden" name="postId" placeholder="" value=post.id readonly)
    p Agregar Imagen:
      input(type="file" name="filetoupload" placeholder="")
    input(type="submit" value="Agregar Imagen")
  
  p

  form(action="/posts/del/"+post.id method="POST")
    
    //p PostId:
    input(type="hidden" name="postId" placeholder="" value=post.id readonly)
    input(type="submit" value="ELIMINAR POST")

block out
  p
    
