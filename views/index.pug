extends layout

block content
  p
    a(href='/posts') Insertar Nuevo Contenido
  p
    a(href='/') Ver todos
    h1 Buscar:
    form(action="/" method="POST")
      input(type="search", name="codeValue", value=codeValue)
      //textarea(type="text" name="codeValue" placeholder="" rows="1" cols="60" value=codeValue)
      input(type="submit" value="Buscar")

  h1 Lista de Contenidos:
  
  if posts.length == 0
    p No hay resultados.
  
  ul
  table(style='width:100%')
    tr
      td
        table(style='width:100%')
          if postsCub.length
            each val,i in postsCub
              if i % 4 == 0
                tr
              td 
                a(href='/posts/' + val.id data-tooltip=val.title) #{val.code}
                p
          else if posts.length
            each val,i in posts
              if i % 4 == 0
                tr
              td 
                a(href='/posts/' + val.id data-tooltip=val.title) #{val.code}
                p
      td
        table(style='width:100%')
          if postsEur.length
            each val,i in postsEur
              if i % 4 == 0
                tr
              td 
                a(href='/posts/' + val.id data-tooltip=val.title) #{val.code}
                p
    

  
  
